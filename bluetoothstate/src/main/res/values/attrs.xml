<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="bluetoothStateStyle" format="reference" />

    <declare-styleable name="BluetoothStateView">
        <attr name="bluetoothAnimateStateChanges" format="boolean" />
        <attr name="bluetoothState" format="enum">
            <enum name="off" value="0" />
            <enum name="on" value="1" />
            <enum name="search" value="2" />
            <enum name="searching" value="3" />
            <enum name="connecting" value="4" />
            <enum name="connected" value="5" />
        </attr>

        <attr name="bluetoothColor" format="color" />
        <attr name="bluetoothTheme" format="enum">
            <enum name="rounded" value="0" />
            <enum name="sharp" value="1" />
        </attr>
    </declare-styleable>

</resources>